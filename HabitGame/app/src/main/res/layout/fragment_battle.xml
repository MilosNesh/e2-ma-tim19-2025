<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lottie="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/bossContainer"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgBoss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/miroljub_petrovic"
                android:scaleType="centerInside" />

            <!-- Idle Lottie (JSON OK) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieBossIdle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                lottie:lottie_rawRes="@raw/chest_idle"
                lottie:lottie_autoPlay="true"
                lottie:lottie_loop="true"
                android:alpha="0.7"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieBossHit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                lottie:lottie_rawRes="@raw/boss_hit"
                lottie:lottie_autoPlay="false"
                lottie:lottie_loop="false"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvBossHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Boss HP: 200/200"
            android:layout_marginTop="8dp"/>

        <ProgressBar
            android:id="@+id/pbBossHp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="100"
            android:progress="100"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvUserPp"
            android:text="PP: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <ProgressBar
            android:id="@+id/pbUserPp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="100"
            android:progress="0"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvEquip"
            android:text="Aktivna oprema: -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvChance"
            android:text="Šansa: 0%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvAttempts"
            android:text="Pokušaji: 5/5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAttack"
            style="@style/Widget.MaterialComponents.Button"
            android:text="NAPAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvResult"
            android:text=""
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieChest"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            lottie:lottie_rawRes="@raw/chest_idle"
            lottie:lottie_autoPlay="true"
            lottie:lottie_loop="true"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
